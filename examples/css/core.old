html,
body {
  font: normal 95% Helvetica, Verdana, Arial, sans-serif;
  color: #000;
  padding: 0;
  margin: 0;
}

body {
  padding: 0.5em 0.7em;
  margin: 0 4em 0 1em;
  max-width: 55em;
  background: #fff;
}

h1,
h2,
h3 {
  font: normal 170%/100% Helvetica, Verdana, Arial, sans-serif;
  margin-top: 1em;
  margin-bottom: 0;
  color: #630;
  background: transparent;
}

h1 {
  padding: 0.2em;
}

h2 {
  font: normal 150%/100% Helvetica, Verdana, Arial, sans-serif;
  margin-top: 2em;
}

h3 {
  font: normal 140%/120% Helvetica, Verdana, Arial, sans-serif;
}

a {
  color: #009;
  background: transparent;
}

a:visited {
  color:#360;
  background:transparent;
}

a:hover,
a:focus,
a:active {
  color:#000;
  background-color: #fc0;
}

img {
  max-width: 100%;
  border: none;
}

pre,
code,
samp,
.sourcecode {
  color: hsl(11, 81%, 43%);
  font-family: "Menlo", "Consolas", "DejaVu Sans Mono", "Monaco", monospace;
  font-size: .9em;
  page-break-inside: avoid;
  hyphens: none;
  text-transform: none;
  white-space: pre-line;
}

pre code,
code code {
  font-size: 100%;
}

pre,
.sourcecode {
  margin: 1em 0;
  padding: 1em;
  border-radius: .2em;
  overflow: auto;
  background: hsl(24, 20%, 95%);
}

[hidden] {
  display: none;
}

#example {
  margin-top: 1em;
  margin-bottom: 2em;
}

#example li + li {
  margin-top: .5em;
}
